<button type="button" onclick="doLike();">

<i class="fa fa-thumbs-up"></i>
<span id="likes"><%- video.likers.length %> </span>
</button>

<button type="button" onclick="doDislike();">

    <i class="fa fa-thumbs-down"></i>
    <span id="dislikes">
    <%- video.dislikers.length %> 
    </span>
    </button>


    <script type="text/javascript">
      function doLike(){
        var ajax=new XMLHttpRequest();
        ajax.open("POST","/do-like",true);
        ajax.setRequestHeader("Content-Type","application/x-www-form-urlencoded");

ajax.onreadystatechange = function(){
    if(this.readyState == 4 && this.status==200){
        var response=JSON.parse(this.responseText);
        if(response.status == "success"){
//update kardo likes
var likes=document.getElementById("likes").innerHTML;
likes=parseInt(likes);
likes++;
document.getElementById("likes").innerHTML=likes;
        }
        else{
            alert(response.message);
        }
    }
}

var videoId = document.getElementById("videoId1").value;
        ajax.send("videoId=" + videoId);
      } 
      
      

      function doDislike(){
        var ajax=new XMLHttpRequest();
        ajax.open("POST","/do-dislike",true);
        ajax.setRequestHeader("Content-Type","application/x-www-form-urlencoded");

ajax.onreadystatechange = function(){
    if(this.readyState == 4 && this.status==200){
        var response=JSON.parse(this.responseText);
        if(response.status == "success"){
//update kardo likes
var likes=document.getElementById("dislikes").innerHTML;
dislikes=parseInt(dislikes);
dislikes++;
document.getElementById("dislikes").innerHTML=dislikes;
        }
        else{
            alert(response.message);
        }
    }
}

var videoId = document.getElementById("videoId1").value;
ajax.send("videoId=" + videoId);
      } 
    </script>